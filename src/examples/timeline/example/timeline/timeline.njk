<ol class="hmrc-timeline">
  {% for event in params.events -%}
    <li class="hmrc-timeline__event">
      <{% if params.headinglevel %}h{{- params.headinglevel | trim -}}{% else %}h2{% endif %} class="hmrc-timeline__event-title">{{ event.title }}</{% if params.headinglevel %}h{{- params.headinglevel | trim -}}{% else %}h2{% endif %}>
      <time class="hmrc-timeline__event-meta" {% if event.datetime %}datetime="{{event.datetime}}"{% endif %}>{{ event.time }}</time>
      <div class="hmrc-timeline__event-content">
        {{ event.content | safe }}
      </div>
    </li>
  {%- endfor %}
</ol>
