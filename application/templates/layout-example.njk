{%- set _rebrand = govukRebrand() if govukRebrand is callable else govukRebrand -%}

<!doctype html>
<html lang="en" class="govuk-template {%- if _rebrand %} govuk-template--rebranded{% endif %} app-example-page__wrapper">
  <head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block pageTitle %}Example — HMRC Design Patterns — Design resources for HMRC — GOV.UK{% endblock %}</title>

    <link rel="icon" href="/extension-assets/govuk-frontend/dist/govuk/assets/rebrand/images/favicon.ico">
    <link type="text/css" rel="stylesheet" href="/hmrc-design-system.min.css" media="all">
    {% if accessibleAutocompleteAssets -%}
      <link type="text/css" rel="stylesheet" href="/assets/accessible-autocomplete-{{ getHMRCFrontendVersion() }}.css" media="all">
    {%- endif %}
  </head>

  <body class="app-example-page govuk-template__body">
    <script>document.body.className += ' js-enabled' + ('noModule' in HTMLScriptElement.prototype ? ' govuk-frontend-supported' : '');</script>
    {%- block body -%}
      {{ contents | safe }}
    {%- endblock -%}

    <script src="/assets/javascripts/hmrc-design-system.js" type="module"></script>
    {% if accessibleAutocompleteAssets -%}
      <script src="/assets/accessible-autocomplete-{{ getHMRCFrontendVersion() }}.js" type="module"></script>
    {%- endif %}
  </body>

</html>
